{
  "name": "Daydream",
  "version": "2.1.2",
  "manifest_version": 2,
  "description": "A chrome extension to record your actions into a nightmare script.",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "*://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; https://*.segment.com https://*.mxpnl.com; object-src 'self'",
  "browser_action": {
    "default_icon": "images/icon-idle.png",
    "default_title": "Daydream"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  }
}
